@model IEnumerable<TestProyect.Models.Equipos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MenuPartial.cshtml";
}

<link rel="stylesheet" href="~/css/entrenador.css">

<header>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button type="button" class="navbar-toggler sidemenu-toggler mb-4">
                <span class="line top"></span>
                <span class="line middle"></span>
                <span class="line bottom"></span>
            </button>
            <a href="#" class="navbar-brand">
                <img class="logotipo" src="~/img/LogoSPEJAR.png" height="40" width="200" />
            </a>

            <button type="button" class="navbar-toggler" data-target="#navbarNav" data-toggle="collapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a href="" class="nav-link dropdown-toggle" id="navbarDropdown" data-toggle="dropdown">
                            <img src="https://assets.metrolatam.com/cl/2015/11/09/captura-de-pantalla-2015-11-09-a-las-09-20-49-1-1200x800.jpg" alt="logo" style="width:40px;"> [Poner Nombre del usuario aquí]
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a href="#" class="dropdown-item">Perfil</a>
                            <a asp-controller="Entrenador" asp-action="Configuracion" class="dropdown-item">Configuración</a>
                            <hr>
                            <a asp-controller="Entrenador" asp-action="Logout" class="dropdown-item">Cerrar Sesión</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<body class="fondoEntrenador">
    <hr />
    <hr />
    <hr />

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Guardado!</strong> @TempData["mensaje"]
        </div>
    }

    @if (TempData["actualizacion"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Actualizado!</strong> @TempData["actualizacion"]
        </div>
    }
    @if (TempData["eliminado"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <a class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Eliminado!</strong> @TempData["eliminado"]
        </div>
    }
    <hr />

    <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
        }
    </style>

    <div class="row">
        <div class="col-md-12">
            <div class="cards border">
                <div class="card-header">
                    <div class="float-none">
                        <h3><strong>Seleccione un Equipo</strong></h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex" id="content-wrapper">
        <div class="w-100">
            <div id="content" class="bg-transparent w-100">
                <div class="container" style="margin-top:5%;">
                    <div id="demo" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/New.svg" alt="Chicago" width="1100" height="500">
                                <div class="carousel-caption justify-content-center align-items-center">
                                    <div class="row justify-content-center">
                                        <div class="col-md-6">
                                            <h4>Añadir Equipo</h4>
                                        </div>
                                    </div>
                                    <div class="row justify-content-center">
                                        <a asp-controller="Entrenador" asp-action="EquipoCreate" class="btn btn-orange">Nuevo Equipo</a>
                                    </div>
                                </div>
                            </div>

                            @foreach (var item in Model)
                            {

                                <div class="carousel-item">
                                    <img src="~/img/Equipos/@Html.DisplayFor(m => item.EscudoEquipo)" alt="Chicago" width="1100" height="500">
                                    <div class="carousel-caption justify-content-center align-items-center">
                                        <div class="row justify-content-center">
                                            <div class="col-md-6">
                                                <h4>@Html.DisplayFor(m => item.NombreEquipo)</h4>
                                                <h5>Categoría: @Html.DisplayFor(m => item.Categorias.NombreCategoria)</h5>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <a asp-controller="Entrenador" asp-action="Alineacion" asp-route-id="@item.IdEquipo" class="btn btn-orange">Ver Equipo</a>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <a class="carousel-control-prev" href="#demo" data-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </a>
                        <a class="carousel-control-next" href="#demo" data-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}