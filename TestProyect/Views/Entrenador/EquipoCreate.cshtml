@model TestProyect.Models.Equipos
@{
    ViewData["Title"] = "EquipoCreate";
    Layout = "~/Views/Shared/_MenuPartial.cshtml";
}

<hr />
<body class="fondoEntrenador">
    <hr />
    <hr />
    <hr />
    <div class="card border">
        <div class="card-header">
            <a class="link-bar" asp-action="Index">Inicio/</a>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="card border">
                <div class="card-header">
                    <h3><strong>Añadir Equipo</strong></h3>
                </div>
            </div>
            <div class="card-body card-special">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-controller="Entrenador" asp-action="EquipoCreate">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-12">
                                    <form asp-controller="Entrenador" asp-action="Index">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="EntrenadorEquiId" value="4" />
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="NombreEquipo" class="control-label"></label>
                                                    <input asp-for="NombreEquipo" class="form-control" />
                                                    <span asp-validation-for="NombreEquipo" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="CategoriaEquId" class="control-label"></label>
                                                    <select asp-for="CategoriaEquId" class="form-control" asp-items="ViewBag.CategoriaEntrenador"></select>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="EscudoEquipo" class="control-label"></label>
                                                    <br />
                                                    <input asp-for="EscudoEquipo" value="Logo1.svg" type="radio" id="Logo1" class="input-hidden" />
                                                    <label for="Logo1"><img src="~/img/Equipos/Logo1.svg" /></label>

                                                    <input asp-for="EscudoEquipo" value="Logo2.svg" type="radio" id="Logo2" class="input-hidden" />
                                                    <label for="Logo2"><img src="~/img/Equipos/Logo2.svg" /></label>

                                                    <input asp-for="EscudoEquipo" value="Logo3.svg" type="radio" id="Logo3" class="input-hidden" />
                                                    <label for="Logo3"><img src="~/img/Equipos/Logo3.svg" /></label>

                                                    <input asp-for="EscudoEquipo" value="Logo4.svg" type="radio" id="Logo4" class="input-hidden" />
                                                    <label for="Logo4"><img src="~/img/Equipos/Logo4.svg" /></label>

                                                    <input asp-for="EscudoEquipo" value="Logo5.svg" type="radio" id="Logo5" class="input-hidden" />
                                                    <label for="Logo5"><img src="~/img/Equipos/Logo5.svg" /></label>

                                                    <input asp-for="EscudoEquipo" value="Logo6.svg" type="radio" id="Logo6" class="input-hidden" />
                                                    <label for="Logo6"><img src="~/img/Equipos/Logo6.svg" /></label>

                                                    <span asp-validation-for="EscudoEquipo" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success float-md-right"><i class="fas fa-check-circle"> Guardar</i></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

