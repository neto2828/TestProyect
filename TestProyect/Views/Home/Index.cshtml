@{
    ViewData["Title"] = "SPEJAR";

}

<!DOCTYPE html>
<html lang="es" dir="ltr">
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body class="fondoPrincipal">
   
    <div class="row carusel">
        <div class="col-md-6">
            <div id="myCarousel" class="carousel carusel slide d-none d-sm-none d-md-block" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img class="banner" src="/img/banner1.png" alt="Oziel">
                        <div class="carousel-caption">
                            <div class="jugador">
                                <h1>Oziel Escobedo</h1>
                                <h2>Mediocampista</h2>
                                <h3>Consolidado</h3>
                            </div>
                        </div>
                    </div>
                    <div class="item">
                        <img class="banner" src="/img/banner2.png" alt="Chicago">
                        <div class="carousel-caption">
                            <div class="jugador">
                                <h1>Alfonso Cuevas Garrido</h1>
                                <h2>Delantero</h2>
                                <h3>Élite</h3>
                            </div>                            
                        </div>
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
            <div class="col-md-4 login">
                <img class="logotipo" src="~/img/LogoSPEJAR.png" />
                <h3 class="titulo">Sistema de Planeación y Estadística de Jugadores de Alto Rendimiento</h3>
                <form action="">
                    <div class="form-group">
                        <label class="labelPrincipal">* Usuario</label>
                        <input type="email" class="form-control" placeholder="* Usuario">
                    </div>
                    <div class="form-group">
                        <label class="labelPrincipal">Contraseña:</label>
                        <input type="password" class="form-control" placeholder="* Contraseña" id="pwd">
                    </div>
                    <button type="submit" class="btn btn-dark btn-lg btn-block" asp-area = "" asp-controller = "Home" asp-action = "Amigo">Iniciar Sesión</button>
                </form>
                <div class="recuperar_contrasena">
                    <a class="enlace" asp-action="PasswordReset">Recuperar Contraseña</a>
                </div>
            </div>
    </div>
</body>
</html>